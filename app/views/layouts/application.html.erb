<!DOCTYPE html>

<html lang="ja">

  <head>
    <title>Kaeru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="swiper.min.css">
  </head>

<body>

  <div class="container">
  <!-- header -->

      <header>
               <nav class="navbar navbre-default">
                  <div class="container-fluid">
                    <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
                                      <span class="sr-only">Toggle navigation</span>
                                      <span class="icon-bar"></span>
                                      <span class="icon-bar"></span>
                                      <span class="icon-bar"></span>
                            </button>
                            <%= link_to "Kaeru", root_path, class: "navbar-brand" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </div>

                            <ul class="nav navbar-nav">
                                          <li>
                                              &nbsp;&nbsp;<%= form_tag user_items_path, :method => 'get' do %>
                                              <%= text_field_tag :search, params[:search] %>
                                              <%= submit_tag "Item Search", :title => nil %>
                                              <% end %>
                                          </li>
                                          <li>
                                              &nbsp;&nbsp;<%= form_tag user_artists_path, :method => 'get' do %>
                                              <%= text_field_tag :search, params[:search] %>
                                              <%= submit_tag "Artist Search", :name => nil %>
                                              <% end %>
                                          </li>
                                          <li><%= link_to 'お買い物', user_carts_path, class: "glyphicon glyphicon-shopping-cart" %></li>

                                          <% if user_signed_in? %>
                                              <li><%= link_to 'user', user_path(current_user.id), class: "glyphicon glyphicon-user" %></li>
                                          <% else %>
                                          　　<li><%= link_to '新規登録', new_user_registration_path, class: "glyphicon glyphicon-user" %></li>
                                          　　<li><%= link_to 'login', user_session_path, class: "glyphicon glyphicon-log-in" %></li>
                                          <% end %>

                                          <li><%= link_to 'logout', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %></li>
                                          <li><%= link_to "お気に入り", user_favorites_path, class: "glyphicon glyphicon-heart" %></li>
                            </ul>
                       </div>
               </nav>

    </header>



<div class="container">

    <div class="row">
        <!-- left -->
        <div class="col-md-2">
            <!-- 囲ってるパネル -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    genre
                </div>
                <ul class="nav nav-pills nav-stacked">
                    <li><%= link_to 'j-pop', user_genre_path(id:1) %></li>
                    <li><%= link_to '洋楽', user_genre_path(id:2) %></li>
                    <li><%= link_to '韓楽', user_genre_path(id:3) %></li>
                    <li><%= link_to 'ジャズ', user_genre_path(id:4) %></li>
                </ul>


            </div>
        </div>
        <div class="col-md-10">

      <%= yield %>
        </div>
     </div>
</div>


               <div class="footer footerc">
                   <div class="container mt-4">
                          <div class="text-center">
                              <ul class="list-inline small">
                                  <li><i class="fa fa-twitter-square fa-2x"></i></li>
                                  <li><i class="fa fa-facebook-square fa-2x"></i></li>
                                  <li><i class="fa fa-instagram fa-2x"></i></li>
                              </ul>
                              <ul class="list-inline small">
                                  <li>お問い合わせ</li>
                                  <li>メッセージ</li>
                                  <li>2018 kaeru</li>
                              </ul>
                              <div class="my-5">
                                  <h3>KAERU DEMO SITE</h3>
                                  <div class="small">Copyright © 2018 KAERU All Rights Reserved"</div>
                              </div>
                          </div>
                   </div>
                </div>
</div>

        <!-- footer -->

   <script src="swiper.min.js"></script>
  </body>
</html>
