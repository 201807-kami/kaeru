
<div class="page-header">

  <h4>商品ページ</h4>

　　<% @items.each do |item| %>
		<table class="table">
			<tbody>
				<tr>
					<td width="200px">
					<%= attachment_image_tag item, :item_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:"100x100" %>
					</td>
					<td>
						<h4><%= item.title %></h4>
						<p>価格｜¥<%= item.price %></p>
						<p>アーティスト名｜<%= item.artist.name %></p>
						<P>在庫状況｜<%= item.status %>
					</td>
					<td width="200px">
					<p><%= link_to "詳細", user_item_path(item.id), class: "btn-group btn-group-xs btn btn-default btn-block glyphicon glyphicon-file btn-xs" %></p>
					 <p>
					 	<%= link_to "お気に入り", add_item_path(item), method: :post, class: "btn-group btn-group-xs btn btn-default btn-block glyphicon glyphicon-heart btn-xs" %>
					</p>
					<p>
					  <%= link_to user_carts_path(item_id: item.id), method: :post, class: "btn btn-danger glyphicon glyphicon-shopping-cart btn-xs btn-block" do %>カートに追加する
					   <% end %>
				    </p>
				    </td>
				</tr>
			</tbody>
		</table>
  <% end %>

</div>


