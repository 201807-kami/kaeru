
    <p class="itemshow">商品詳細</p>

    <div class="col-md-3">
      <%= attachment_image_tag @item, :item_image, :fill, 200, 200, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:"200x200" %>
    </div>

    <div class="col-md-4">

            <h3 class="border-botom"><%= @item.title %></h3>
            <p>アーティスト名｜<%= link_to @item.artist.name, user_artist_path(@item.artist_id) %></p>
            <p>ジャンル｜<span class="label label-default"><%= @item.genre.name %></span></p>
            <p>レーベル名｜<%= @item.label.name %></p>
            <p>在庫状況｜<%= @item.status %></p>

    </div>

    <div class="col-md-3">
      <dl>
        <dt>値段(税込)</dt>
        <dd>
          <span class="pricefont">¥<%= @item.price %></span>
        </dd>
      </dl>
      <%= link_to user_carts_path(item_id: @item.id), method: :post,class: "btn btn-danger btn-block glyphicon glyphicon-shopping-cart" do %>カートに入れる<% end %>

      <%= link_to "お気に入り", add_item_path(@item), method: :post, class: "btn-group btn-group-xs btn btn-default btn-block glyphicon glyphicon-heart" %>
    </div>


<div class="col-md-7">
    <table class="table">
        <thead>
            <tr>
                <th>収録内容</th>
                <th>アーティスト｜<%= @item.artist.name %></th>
            </tr>
        </thead>
        <tbody>
            <% @item.discs.each do |disc| %>
            <% disc.disc_songs.each do |disc_song| %>
            <tr>
            <td>・<%= disc_song.song.name %></td>
            <td></td>
            </tr>
            <% end %>
            <% end %>
        </tbody>
    </table>


<p>構成枚数｜<%= @disc.disc_number %></p>

    </div>



