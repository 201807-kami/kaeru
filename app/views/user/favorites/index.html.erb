
<div class="page-header">

  <h4>あなたのお気に入り一覧</h4>

</div>



	  <% @favorite.each do |favorite| %>
	  <% item = Item.find(favorite.item_id) %>

		<table class="table">
			<tbody>
				<tr>
					<td width="200px">
					<%= attachment_image_tag item, :item_image, :fill, 120, 120, format: 'jpeg', class: "profile-img center-block " %>
					</td>
					<td>
						<h4><%= item.title %></h4>
						<p>価格｜¥<%= item.price %></p>
						<p><%= item.release_date %></p>
					</td>
					<td width="200px">
					 <p>
					   <%= link_to user_carts_path(item_id: item.id), method: :post, class: "btn btn-danger glyphicon glyphicon-shopping-cart btn-xs btn-block" do %>カートに追加する
					   <% end %>
					</p>
					<p>
					  <%= link_to "削除", user_favorite_path(favorite), method: :delete, class: "btn-grou btn btn-default glyphicon glyphicon-trash btn-xs btn-block" %>
				    </p>
				    </td>
				</tr>
			</tbody>
		</table>



  <% end %>
