<div class="container">
     <div class="row">
      <div class="col-lg-9">
        <%= form_for @order, url: user_orders_path do |f| %>

        <div class="field">
         <font size="5"><%= f.label :現在配送先となってる登録住所 %></font>
         <font size="5"><%= @order.user.address %></font>
        </div>

        <div>
          <%= f.label :配送先を変えたい方はこちらに入力してください %>
          <%= f.text_area :address, class:"order_adress" %>
        </div>


        <div class="field">
        <%= f.label :お支払い方法 %>
        <%= f.select(:payment_method, [['選択して下さい', ''],['現金', '現金'],['クレジット支払い','クレジット支払い']]) %>
        </div>

          <table class="table table-bordered table-sm table-hove
            <thead>
              <tr class="table-secondary">
                <th style="width:10%}">商品名</th>
                <th style="width:10%}">値段</th>
                <th style="width:10%}">数量</th>
              </tr>
            </thead>
              <tbody>
                <% @order.order_items.each do |order_item| %>
                  <tr>
                    <td><%= order_item.item.title %></td>
                    <td><%= order_item.item.price * order_item.quantity %></td>
                    <td><%= order_item.quantity %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>

          <h3>小計</h3>
          <font size="5"><%= @order.item_amount %>円</font>


        <div class="actions">
        <%= f.submit '注文を確定する' %>
        <% end %>
      </div>
   </div>
</div>


