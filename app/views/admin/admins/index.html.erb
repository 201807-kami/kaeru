<% @crumbs = [{title: '管理者一覧'}] %>
	<div class="card">
	  <div class="card-header pt-3">
	    管理者一覧
	    <%= link_to new_admin_admin_path, class: 'btn btn-success btn-sm float-right mb-0' do %>
	      <i class="fa fa-plus">
	      新規作成
	      </i>
	    <% end %>
	  </div>
	  <div class="card-body">
			<table class="table table-bordered table-sm table-hover">
			    <tr class="table-secondary">
			      <th class="text-right" style="width: 10%">名前</th>
			      <th style="width:10%">email</th>
			      <th></th>
			    </tr>
			    <% @admins.each do |admin| %>
			      <tr>
			        <td><%= admin.name %></td>
			        <td><%= admin.email %></td>
			        <td>
			          <%= link_to '編集', edit_admin_admin_path(admin) %>
			          <span class="my-2">/</span>
			          <%= link_to '削除', admin_admin_path(admin), method: :delete, data: {confirm: '削除してよろしいでしょうか？'} %>
			        </td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
