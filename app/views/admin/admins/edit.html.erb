<% @crumbs = [{title: '管理者一覧', path: admin_admins_path}, {title: '管理者編集'}] %>
	<%= form_for @admin, url: admin_admin_path(@admin) do |f| %>
		<div class="card">
			<div class="card-header">
				<h2>管理者情報</h2>
			</div>
			<div class="card-body">
				<%= render 'form', f: f %>

				<div class="float-right">
					<%= f.submit '更新', class: 'btn btn-primary mr-2'%>
					<%= link_to 'キャンセル', admin_admins_path, class: 'btn btn-light'%>
				</div>
			</div>
		</div>
	<% end %>