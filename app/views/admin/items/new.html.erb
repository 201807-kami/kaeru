<div class="container">

<% if @item.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


	<%= form_for @item, url: admin_items_path do |f| %>
		<div class="card">
			<div class="card-header">
				<h2>商品情報</h2>
			</div>
			<div class="card-body">

    <div class ="field">
      <%= f.label :商品名 %><br>
      <%= f.text_field :title %><br>
      <%= f.label :ジャケット画像 %><br>
      <%= f.attachment_field :item_image %>
      <%= f.label :アーティスト %><br>
      <%= f.text_field :artist_id %><br>
      <%= f.label :価格 %><br>
      <%= f.text_field :price %><br>
      <%= f.label :レーベル名 %><br>
      <%= f.text_field :label_id %><br>
      <%= f.label :ジャンル %><br>
      <%= f.select :genre_id, [["J-pop", 1],["K-pop", 2], ["洋楽", 3], ["ジャズ", 4]] %><br>
      <%= f.label :在庫数 %><br>
      <%= f.text_field :stock %><br>
      <%= f.fields_for :discs do |df| %>
        <%= render partial: "disc_form", locals: {f: df } %>
      <% end %>
      <%= link_to_add_field("disc add", f, :discs, {}) %>
    </div>








				<div class="float-right">
					<%= f.submit '登録', class: 'btn btn-primary mr-2'%>
					<%= link_to 'キャンセル', admin_items_path, class: 'btn btn-light'%>
				</div>
			</div>
		</div>
	<% end %>
</div>


