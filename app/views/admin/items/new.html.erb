<% @crumbs = [{title: '商品一覧', path: admin_items_path}, {title: '新規作成'}] %>

	<%= form_for @item, url: admin_items_path do |f| %>
		<div class="card">
			<div class="card-header">
				<h2>商品情報</h2>
			</div>
			<div class="card-body">
				<%= render 'form', f: f %>
				<div class="float-right">
					<%= f.submit '登録', class: 'btn btn-primary mr-2'%>
					<%= link_to 'キャンセル', admin_items_path, class: 'btn btn-light'%>
				</div>
			</div>
		</div>
	<% end %>



