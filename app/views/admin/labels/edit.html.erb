<% @crumbs = [{title: 'レーベル一覧', path: admin_labels_path}, {title: 'レーベル編集'}] %>
	<%= form_for @label, url: admin_label_path(@label) do |f|%>
		<div class="card">
			<div class="card-header">
				<p>レーベル編集</p>
			</div>
			<div class="card-body">
				<%= render 'form', f: f %>
				<div class="float-right">
					<%= f.submit '更新', class: 'btn btn-primary mr-2' %>
					<%= link_to 'キャンセル', admin_labels_path, class: 'btn btn-light' %>
				</div>
			</div>
		</div>
	<% end %>
