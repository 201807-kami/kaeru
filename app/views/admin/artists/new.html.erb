<% @crumbs = [{title: 'アーティスト一覧', path: admin_artists_path}, {title: '新規作成'}] %>

	<%= form_for @artist, url: admin_artists_path do |f| %>
		<div class="card">
			<div class="card-header">
				アーティスト情報
			</div>
			<div class="card-body">
				<%= render 'form', f: f %>

				<div class="float-right">
					<%= f.submit '登録', class: 'btn btn-primary mr-2'%>
					<%= link_to 'キャンセル', admin_artists_path, class: 'btn btn-light'%>
				</div>
			</div>
		</div>
	<% end %>