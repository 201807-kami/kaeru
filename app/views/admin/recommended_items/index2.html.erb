<div class="container">
  <div class="card">
    <% @genre.each do |genre| %>
    <div class="card-header pt-3">
      <%= genre.name %>
    </div>
    <div class="card-body">
      <table class="table table-bordered table-sm table-hover">
        <thead>
          <tr class="table-secondary">
            <th class="text-center" style="width: 8%"}>#</th>
            <th style="width: 15%">ジャケット画像</th>
            <th style="width: 55%">商品名</th>
            <th style="width: 12%"></th>
            <th style="width: 12%"></th>
          </tr>
        </thead>
        <tbody>
          <% @items.where(genre).each do |item| %>
            <tr>
              <td class="text-center"><%= item.id %></td>
              <td class="image_tag"></td>
              <td><%= item.title %></td>
              <td><%= link_to '編集', edit_admin_recommended_item_path(item) %></td>
              <td><%= link_to '削除', admin_recommended_item_path(item), method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% end %>
  </div>
</div>